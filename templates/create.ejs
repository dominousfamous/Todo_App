<%- include('../templates/head.ejs') %>

<div class="container">
    <form action='/create' method = 'POST'>
        <label for "date"><b>Date</b></label>
        <div class = 'form-group'>
            <input class = "form-control" autofocus autocomplete = "off" name = 'date' type = "date">
        </div>
    
        <label for "event"><b>What do you need to do?</b></label>
        <div class = 'form-group'>
            <input class = "form-control" autofocus autocomplete = "off" name = 'event' placeholder = 'Clean my room...etc' type = "text">
        </div>
        <div class = 'form-group'>
            <input class = "btn btn-primary" autocomplete = "off" name = 'submit' value = 'submit' type = "submit">
        </div>
    </form>    
</div>

</body>
</html>